<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/backgr_tansparent"
    android:padding="5dp">

    <TextView
        android:id="@+id/popML_existing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popiti_mk_pres"
        android:layout_below="@+id/popiti_list"
        android:layout_alignParentStart="true"
        android:textSize="17dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="itinerariu"
        android:layout_above="@+id/popML_pos"
        android:layout_alignEnd="@+id/popML_pos"
        android:layout_marginEnd="23dp"
        android:id="@+id/popML_title"
        android:background="@color/white"/>


    <ImageView
        android:src="@mipmap/update"
        android:id="@+id/popML_update"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/popML_markers"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/popML_empty_text"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/popML_empty"
        android:layout_marginStart="155dp"
        android:textSize="19dp"
        android:lines="2"
        android:layout_below="@+id/popML_existing"

        android:layout_marginTop="65dp" />

    <ImageView
        android:src="@mipmap/up"
        android:id="@+id/popML_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_alignTop="@+id/popML_down"
        android:layout_toStartOf="@+id/popML_down" />

    <ImageView
        android:src="@mipmap/undo"
        android:id="@+id/popML_undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_alignTop="@+id/popML_up"
        android:layout_toStartOf="@+id/popML_pos" />

    <ImageView
        android:src="@mipmap/down"
        android:id="@+id/popML_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_alignTop="@+id/popML_update"
        android:layout_alignEnd="@+id/popML_pos" />

    <ListView
        android:padding="2dp"
        android:id="@+id/popML_markers"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_below="@+id/popML_existing"
        android:layout_alignParentStart="true" 
        android:background="@drawable/list_borders"/>
    
    <ListView
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/list_borders"
        android:id="@+id/popML_pos"
        android:layout_below="@+id/popML_existing"
        android:layout_toEndOf="@+id/popML_markers" />






</RelativeLayout>